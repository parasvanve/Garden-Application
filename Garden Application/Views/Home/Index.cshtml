@model GardenBookingApp.Models.GardenBooking
@{
    ViewData["Title"] = "Shree Ram Dharamshala";
    var bookedDates = ViewBag.BookedDates as List<DateTime> ?? new List<DateTime>();
}

<!DOCTYPE html>
<html>
<head>
    <title>Shree Ram Dharamshala</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .main-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            overflow: hidden;
        }

        .header-section {
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            color: white;
            padding: 40px;
            text-align: center;
        }

        .booked-date {
            background: #ff6b6b;
            color: white;
            padding: 10px;
            border-radius: 10px;
            margin: 5px 0;
        }

        .btn-book {
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            border: none;
            color: white;
            padding: 12px 30px;
            font-size: 18px;
            border-radius: 25px;
        }

            .btn-book:hover {
                transform: scale(1.05);
                color: white;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="main-card">
            <div class="header-section">
                <h1 class="display-4">Shree Ram Dharamshala</h1>
                <p class="lead">Book our beautiful garden for your special day</p>
                <div class="mt-3">
                    <a asp-action="Calendar" class="btn btn-light btn-lg">
                        📅 View Calendar
                    </a>
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success m-4">
                    <strong>✓ Success!</strong> @TempData["Success"]
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger m-4">
                    <strong>✗ Error!</strong> @TempData["Error"]
                </div>
            }

            <div class="row p-4">
                <div class="col-md-6">
                    <h3 class="mb-4">📝 Book Now</h3>
                    <form asp-action="Book" method="post">
                        <div class="form-group">
                            <label asp-for="CustomerName"></label>
                            <input asp-for="CustomerName" class="form-control form-control-lg"
                                   placeholder="Enter your name" required />
                        </div>

                        <div class="form-group">
                            <label asp-for="MobileNumber"></label>
                            <input asp-for="MobileNumber" class="form-control form-control-lg"
                                   placeholder="+91 1234567890" required />
                        </div>

                        <div class="form-group">
                            <label asp-for="BookingDate"></label>
                            <input asp-for="BookingDate" type="date"
                                   class="form-control form-control-lg"
                                   min="@DateTime.Today.ToString("yyyy-MM-dd")"
                                   value="@ViewBag.SelectedDate"
                                   required />
                        </div>

                        <div class="form-group">
                            <label asp-for="NumberOfPeople"></label>
                            <input asp-for="NumberOfPeople" type="number"
                                   class="form-control form-control-lg"
                                   min="1" max="1500" value="20" required />
                        </div>

                        <div class="form-group">
                            <label asp-for="Purpose"></label>
                            <select asp-for="Purpose" class="form-control form-control-lg">
                                <option value="">-- Select Purpose --</option>
                                <option value="Birthday Party">Birthday Party</option>
                                <option value="Wedding">Wedding</option>
                                <option value="Anniversary">Anniversary</option>
                                <option value="Corporate Event">Corporate Event</option>
                                <option value="Family Function">Family Function</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-book btn-block btn-lg">
                            ✓ Book Garden
                        </button>

                        <a asp-action="AllBookings" class="btn btn-outline-primary btn-block mt-2">
                            View All Bookings
                        </a>
                    </form>
                </div>

                <div class="col-md-6">
                    <h3 class="mb-4">📅 Booked Dates</h3>

                    @if (bookedDates.Any())
                    {
                        <div style="max-height: 500px; overflow-y: auto;">
                            @foreach (var date in bookedDates)
                            {
                                <div class="booked-date">
                                    <strong>🔴 @date.ToString("dddd, dd MMMM yyyy")</strong>
                                    <br />
                                    <small>Not Available</small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success text-center p-5">
                            <h4>✓ All Dates Available!</h4>
                            <p>No bookings yet. Be the first to book!</p>
                        </div>
                    }

                    <div class="alert alert-info mt-4">
                        <h5>ℹ️ Garden Details</h5>
                        <ul class="mb-0">
                            <li>Capacity: Up to 1500 people</li>
                            <li>Timings: 9 AM - 9 PM</li>
                            <li>Facilities: Parking, Sound System, Lighting</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>