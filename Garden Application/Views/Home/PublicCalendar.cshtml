@{
    ViewData["Title"] = "Booking Calendar";
    var bookedDates = ViewBag.BookedDates as List<DateTime> ?? new List<DateTime>();

    // Check if user is logged in
    bool isAuthenticated = User.Identity != null && User.Identity.IsAuthenticated;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booking Calendar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Keeping all your original styles exactly the same */
        * {
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 10px;
            margin: 0;
        }

        .calendar-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            padding: 15px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .header-section {
            display: flex;
            flex-direction: column;
            gap: 15px;
            margin-bottom: 20px;
        }

        .header-title {
            font-size: 1.5rem;
            font-weight: bold;
            margin: 0;
        }

        .header-buttons {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

            .header-buttons .btn {
                flex: 1;
                min-width: 140px;
                white-space: nowrap;
            }

        .calendar-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            padding: 15px;
            border-radius: 15px;
            color: white;
            flex-wrap: wrap;
            gap: 10px;
        }

            .calendar-header h3 {
                font-size: 1.2rem;
                margin: 0;
                flex: 1;
                text-align: center;
                min-width: 150px;
            }

        .calendar-nav button {
            background: white;
            color: #11998e;
            border: none;
            padding: 8px 15px;
            border-radius: 25px;
            font-weight: bold;
            cursor: pointer;
            font-size: 0.9rem;
            transition: transform 0.2s;
        }

            .calendar-nav button:hover {
                transform: scale(1.05);
            }

        .calendar-grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 3px;
            margin-top: 15px;
            width: 100%;
        }

        .calendar-day-header {
            text-align: center;
            font-weight: bold;
            padding: 6px 2px;
            background: #f8f9fa;
            border-radius: 5px;
            color: #495057;
            font-size: 0.65rem;
        }

        .calendar-day {
            aspect-ratio: 1;
            border: 1px solid #e9ecef;
            border-radius: 5px;
            padding: 3px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
            background: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 45px;
            font-size: 0.75rem;
        }

            .calendar-day:hover:not(.other-month) {
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            }

            .calendar-day.other-month {
                opacity: 0.3;
                cursor: default;
            }

            .calendar-day.today {
                border-color: #007bff;
                background: #e7f3ff;
            }

            .calendar-day.booked {
                background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
                color: white;
                border-color: #ff6b6b;
                font-weight: bold;
                position: relative;
            }

                .calendar-day.booked::after {
                    content: '✓';
                    position: absolute;
                    top: 2px;
                    right: 2px;
                    font-size: 0.6rem;
                    background: white;
                    color: #ff6b6b;
                    width: 12px;
                    height: 12px;
                    border-radius: 50%;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    line-height: 1;
                }

                .calendar-day.booked:hover {
                    background: linear-gradient(135deg, #ee5a6f 0%, #ff6b6b 100%);
                }

        .day-number {
            font-size: 0.8rem;
            font-weight: bold;
            line-height: 1;
        }

        .booking-badge {
            background: white;
            color: #ff6b6b;
            padding: 1px 4px;
            border-radius: 3px;
            font-size: 0.5rem;
            margin-top: 2px;
            display: none;
            line-height: 1;
        }

        .modal-content {
            border-radius: 15px;
        }

        .modal-header {
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            color: white;
            border-radius: 15px 15px 0 0;
        }

        .legend {
            display: flex;
            flex-direction: column;
            gap: 15px;
            margin-top: 20px;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 10px;
        }

        .legend-item {
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 0.9rem;
        }

        .legend-box {
            width: 25px;
            height: 25px;
            border-radius: 5px;
            flex-shrink: 0;
        }

        .legend-available {
            background: white;
            border: 2px solid #e9ecef;
        }

        .legend-booked {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
        }

        .legend-today {
            background: #e7f3ff;
            border: 2px solid #007bff;
        }

        /* Media Queries included from original code */
        @@media (min-width: 768px) {
            body

        {
            padding: 20px;
        }

        .calendar-card {
            padding: 25px;
        }

        .header-section {
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
        }

        .header-title {
            font-size: 1.8rem;
        }

        .header-buttons .btn {
            flex: 0 1 auto;
        }

        .calendar-header {
            padding: 18px;
        }

            .calendar-header h3 {
                font-size: 1.5rem;
            }

        .calendar-nav button {
            padding: 10px 18px;
            font-size: 1rem;
        }

        .calendar-grid {
            gap: 8px;
        }

        .calendar-day-header {
            padding: 12px 8px;
            font-size: 0.95rem;
        }

        .calendar-day {
            padding: 8px;
            border-radius: 10px;
            min-height: 80px;
        }

        .day-number {
            font-size: 1.1rem;
        }

        .booking-badge {
            display: block;
            font-size: 0.7rem;
            padding: 3px 8px;
        }

        .legend {
            flex-direction: row;
            justify-content: center;
            gap: 30px;
        }

        .legend-item {
            font-size: 1rem;
        }

        .legend-box {
            width: 30px;
            height: 30px;
        }

        }
        @@media (min-width: 1024px) {
            body

        {
            padding: 30px;
        }

        .calendar-card {
            padding: 30px;
        }

        .header-title {
            font-size: 2rem;
        }

        .calendar-header {
            padding: 20px;
        }

        .calendar-grid {
            gap: 10px;
        }

        .calendar-day {
            padding: 10px;
            min-height: 100px;
        }

        .day-number {
            font-size: 1.2rem;
        }

        .booking-badge {
            font-size: 0.75rem;
        }

        }
        @@media (max-width: 767px) and (orientation: landscape) {
            .calendar-day

        {
            min-height: 40px;
        }

        .calendar-header h3 {
            font-size: 1rem;
        }

        }
        @@media (max-width: 320px) {
            body

        {
            padding: 5px;
        }

        .calendar-card {
            padding: 8px;
        }

        .header-title {
            font-size: 1rem;
        }

        .calendar-nav button {
            padding: 5px 8px;
            font-size: 0.75rem;
        }

        .calendar-header h3 {
            font-size: 0.85rem;
        }

        .calendar-day {
            min-height: 35px;
        }

        .day-number {
            font-size: 0.7rem;
        }

        .calendar-day.booked::after {
            width: 10px;
            height: 10px;
            font-size: 0.5rem;
        }

        }
        @@media (max-width: 380px) {
            .calendar-card

        {
            padding: 10px;
            border-radius: 15px;
        }

        .header-title {
            font-size: 1.1rem;
        }

        .header-buttons .btn {
            font-size: 0.85rem;
            padding: 8px 12px;
        }

        .calendar-nav button {
            padding: 6px 10px;
            font-size: 0.8rem;
        }

        .calendar-header {
            padding: 10px;
        }

            .calendar-header h3 {
                font-size: 0.95rem;
            }

        .calendar-day-header {
            font-size: 0.6rem;
            padding: 5px 1px;
        }

        .calendar-grid {
            gap: 2px;
        }

        .calendar-day {
            min-height: 40px;
            border-radius: 4px;
        }

        .day-number {
            font-size: 0.75rem;
        }

        .legend {
            padding: 10px;
        }

        .legend-item {
            font-size: 0.8rem;
        }

        .legend-box {
            width: 20px;
            height: 20px;
        }

        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="calendar-card">
            <div class="header-section">
                <h2 class="header-title">🗓️ Garden Booking Calendar</h2>
                <div class="header-buttons">
                    @if (isAuthenticated)
                    {
                        <a asp-action="Index" class="btn btn-primary">📝 Book Now</a>
                        <a asp-action="AllBookings" class="btn btn-secondary">📋 All Bookings</a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">🔒 Login to Book</a>
                    }
                </div>
            </div>

            <div class="calendar-header">
                <div class="calendar-nav">
                    <button onclick="previousMonth()">◄ Previous</button>
                </div>
                <h3 id="currentMonth"></h3>
                <div class="calendar-nav">
                    <button onclick="nextMonth()">Next ►</button>
                </div>
            </div>

            <div class="calendar-grid" id="calendarGrid"></div>

            <div class="legend">
                <div class="legend-item">
                    <div class="legend-box legend-available"></div>
                    <span>Available</span>
                </div>
                <div class="legend-item">
                    <div class="legend-box legend-booked"></div>
                    <span>Booked</span>
                </div>
                <div class="legend-item">
                    <div class="legend-box legend-today"></div>
                    <span>Today</span>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="bookingModal" tabindex="-1" role="dialog" aria-labelledby="bookingModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="bookingModalLabel">Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="bookingDetails">
                </div>
                <div class="modal-footer">
                    @if (!isAuthenticated)
                    {
                        <a href="/Account/Login" class="btn btn-primary">Login to Book</a>
                    }
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let currentDate = new Date();
        let bookedDates = @Html.Raw(Json.Serialize(bookedDates.Select(d => d.ToString("yyyy-MM-dd"))));
        let monthBookings = [];
        // LOGIC CHANGE: Pass C# auth state to Javascript
        const isUserLoggedIn = @Json.Serialize(isAuthenticated);
        // Replace this with your actual Login URL
        const loginUrl = "/Account/Login";

        const monthNames = ["January", "February", "March", "April", "May", "June",
            "July", "August", "September", "October", "November", "December"];
        const dayNames = ["Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"];

        async function loadMonthBookings(year, month) {
            try {
                const response = await fetch(`/Home/GetBookingsForMonth?year=${year}&month=${month}`);
                monthBookings = await response.json();
            } catch (error) {
                console.error('Error loading bookings:', error);
                monthBookings = [];
            }
        }

        async function renderCalendar() {
            const year = currentDate.getFullYear();
            const month = currentDate.getMonth();

            await loadMonthBookings(year, month + 1);

            document.getElementById('currentMonth').textContent = `${monthNames[month]} ${year}`;

            const firstDay = new Date(year, month, 1).getDay();
            const daysInMonth = new Date(year, month + 1, 0).getDate();
            const daysInPrevMonth = new Date(year, month, 0).getDate();

            let calendarHTML = '';

            // Day headers
            dayNames.forEach(day => {
                calendarHTML += `<div class="calendar-day-header">${day}</div>`;
            });

            // Previous month days
            for (let i = firstDay - 1; i >= 0; i--) {
                const day = daysInPrevMonth - i;
                calendarHTML += `<div class="calendar-day other-month">
                    <div class="day-number">${day}</div>
                </div>`;
            }

            // Current month days
            const today = new Date();
            for (let day = 1; day <= daysInMonth; day++) {
                const currentDateStr = `${year}-${String(month + 1).padStart(2, '0')}-${String(day).padStart(2, '0')}`;
                const isToday = today.getDate() === day && today.getMonth() === month && today.getFullYear() === year;
                const isBooked = bookedDates.includes(currentDateStr);

                // We handle the booking object logic inside showBookingDetails now
                // to prevent rendering data in HTML if unnecessary
                const booking = monthBookings.find(b => b.date === currentDateStr);

                let classes = 'calendar-day';
                if (isToday) classes += ' today';
                if (isBooked) classes += ' booked';

                // Escaping data for safety
                const safeBooking = booking ? JSON.stringify(booking).replace(/"/g, '&quot;') : 'null';

                calendarHTML += `<div class="${classes}" onclick='showBookingDetails(${safeBooking}, "${currentDateStr}")'>
                    <div class="day-number">${day}</div>
                    ${isBooked ? '<div class="booking-badge">BOOKED</div>' : ''}
                </div>`;
            }

            // Next month days
            const totalCells = Math.ceil((firstDay + daysInMonth) / 7) * 7;
            const remainingCells = totalCells - (firstDay + daysInMonth);
            for (let i = 1; i <= remainingCells; i++) {
                calendarHTML += `<div class="calendar-day other-month">
                    <div class="day-number">${i}</div>
                </div>`;
            }

            document.getElementById('calendarGrid').innerHTML = calendarHTML;
        }

        function showBookingDetails(booking, dateStr) {
            const date = new Date(dateStr);
            const today = new Date();
            today.setHours(0, 0, 0, 0);

            const formattedDate = date.toLocaleDateString('en-US', {
                weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'
            });

            let content = `<h5>📅 ${formattedDate}</h5>`;

            // SCENARIO 1: The Date is Booked
            if (booking) {
                if (isUserLoggedIn) {
                    // === OWNER VIEW (Logged In) ===
                    content += `
                        <div class="alert alert-danger">
                            <h6>❌ Garden is Already Booked</h6>
                        </div>
                        <table class="table table-bordered">
                            <tr><th>Customer Name:</th><td>${booking.name}</td></tr>
                            <tr><th>People:</th><td>${booking.people}</td></tr>
                            <tr><th>Purpose:</th><td>${booking.purpose || '-'}</td></tr>
                        </table>
                    `;
                } else {
                    // === PUBLIC VIEW (Not Logged In) ===
                    // Do not show names or purpose
                    content += `
                        <div class="alert alert-warning">
                            <h6>❌ Reserved</h6>
                            <p>This date has already been booked.</p>
                        </div>
                        <p class="text-muted">Please log in to see details or book a different date.</p>
                    `;
                }
                document.getElementById('bookingDetails').innerHTML = content;
                $('#bookingModal').modal('show');
            }

            // SCENARIO 2: Date Passed (Old date)
            else if (date < today) {
                content += `
                    <div class="alert alert-secondary">
                        <h6>⏱️ Date Has Passed</h6>
                    </div>`;
                document.getElementById('bookingDetails').innerHTML = content;
                $('#bookingModal').modal('show');
            }

            // SCENARIO 3: Date Available
            else {
                if (isUserLoggedIn) {
                    // Go to booking page
                    window.location.href = `/Home/Index?selectedDate=${dateStr}`;
                } else {
                    // Redirect to Login
                    // Optional: You can append ?ReturnUrl=... to redirect back after login
                    window.location.href = loginUrl;
                }
            }
        }

        function previousMonth() {
            currentDate.setMonth(currentDate.getMonth() - 1);
            renderCalendar();
        }

        function nextMonth() {
            currentDate.setMonth(currentDate.getMonth() + 1);
            renderCalendar();
        }

        $(document).ready(function() {
            renderCalendar();

            $('.close, [data-dismiss="modal"]').on('click', function() {
                $('#bookingModal').modal('hide');
            });
        });
    </script>
</body>
</html>