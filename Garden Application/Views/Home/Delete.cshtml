@model GardenBookingApp.Models.GardenBooking
@{
    ViewData["Title"] = "Delete Booking";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .delete-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            padding: 30px;
            max-width: 600px;
            margin: auto;
            border-left: 10px solid #dc3545;
        }

        .btn-danger-confirm {
            background-color: #dc3545;
            border-color: #dc3545;
            font-size: 18px;
            padding: 10px 25px;
            border-radius: 25px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="delete-card">
            <h2>🗑️ Delete Booking Confirmation</h2>
            <hr />

            <div class="alert alert-danger mt-4">
                **WARNING: Are you sure you want to delete this booking? This action cannot be undone.**
            </div>

            <dl class="row mt-4">
                <dt class="col-sm-4">Customer Name:</dt>
                <dd class="col-sm-8">@Model.CustomerName</dd>

                <dt class="col-sm-4">Booking Date:</dt>
                <dd class="col-sm-8">@Model.BookingDate.ToString("dd MMMM yyyy")</dd>

                <dt class="col-sm-4">Mobile Number:</dt>
                <dd class="col-sm-8">@Model.MobileNumber</dd>

                <dt class="col-sm-4">Purpose:</dt>
                <dd class="col-sm-8">@(Model.Purpose ?? "N/A")</dd>

                <dt class="col-sm-4">Booked On:</dt>
                <dd class="col-sm-8">@Model.CreatedDate.ToString("dd MMM yyyy")</dd>
            </dl>

            <form asp-action="Delete" method="post">
                @* CRITICAL: Hidden fields for Azure Table Storage keys (PartitionKey, RowKey) *@
                <input type="hidden" asp-for="PartitionKey" />
                <input type="hidden" asp-for="RowKey" />

                <button type="submit" class="btn btn-danger-confirm btn-lg">
                    ✅ Confirm Delete
                </button>
                <a asp-action="AllBookings" class="btn btn-secondary btn-lg ml-2">
                    ❌ Cancel
                </a>
            </form>
        </div>
    </div>
</body>
</html>